    <body class="img js-fullheight"  style="background-image: url(images/IMG-20230902-WA0007.jpg); background-size: cover; background-position: center;">
       
	   <section class="container forms">
            <div class="form login">
                <div class="form-content">
                    <header>Sign up</header>
                    <form action="/register" method="POST">
                        <div class="field input-field">
                            <input type="text" name="username" placeholder="Identity number" class="input" required>
                        </div>

                        <div class="field input-field">
                            <input type="password" name="password" placeholder="Create Password" class="password" required>
                            <i class='bx bx-hide eye-icon'></i>
                        </div>

                        <div class="field input-field">
                            <input type="password" name="password" placeholder="Confirm Password" class="password" required>
                            <i class='bx bx-hide eye-icon'></i>
                        </div>

                        <div class="field button-field">
						
                            <button>Register</button>
                        </div>

                        <div class="form-link">
                            <a href="/login" class="forgot-pass">Already a Member?</a>
                        </div>
                    </form>

                    
                </div>

               
            </div>

            
        </section>

        <!-- JavaScript -->
        <script src="js/script.js"></script>
